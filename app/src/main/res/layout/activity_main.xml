<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.priyanka.crowdfire.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/top_container"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cecece"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:id="@+id/favourite_wrapper"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/holo_circle_shape"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/fav_un_fav_iv"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/unfavourite" />
            </LinearLayout>


            <ImageView
                android:id="@+id/shuffle_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/shuffle"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/bottom_container"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
    </LinearLayout>



</RelativeLayout>
